html
  head
    title= "IMD Football " + match.matchname
    link(type='text/css', rel='stylesheet', href='http://meyerweb.com/eric/tools/css/reset/reset.css')
    style
      //include ../../build/css/build.css
      include ../css/style.css
    script(src='https://code.jquery.com/jquery-2.2.3.min.js')
    script
      include ../script/script.js
      
    script(src='http://localhost:3000/socket.io/socket.io.js')
  body
    div.container
      h1.match__name(id="matchName" data-matchname= "" + match.matchname)= match.matchname
      a.backlink(href='http://localhost:3000/matches/') Back to matches
      div.match__results
        img.country1flag(id=match.country1name)
        h2.country1name(id="country1name")= match.country1name + " "
        h3.country1goals(id="matchgoals")= JSON.stringify(match.country1Goals) + " - " + JSON.stringify(match.country2Goals)
        //h3.country2goals= " " + JSON.stringify(match.country2Goals) + " "
        h2.country2name(id="country1name")= match.country2name
        img.country2flag(id=match.country1name)
      hr
      div.match__details
        h4.totalshots(id="totalshots")
          div.country1span(id="country1_shots")= JSON.stringify(match.country1Shots) + ' '
          div Total shots 
          div.country2span(id="country2_shots")= ' ' + JSON.stringify(match.country2Shots)
        
        h4.totalfouls(id="totalfouls")
          div.country1span(id="country1_fouls")= JSON.stringify(match.country1Fouls) + ' '
          div Total fouls 
          div.country2span(id="country2_fouls")= ' ' + JSON.stringify(match.country2Fouls)
      hr
      div.match__commentary
        h6.commentarytitle Realtime updates
        div.commentary(id="matchcommentary") 
          each nestedObject in match.commentary
            p= nestedObject.message
      hr
      br
      div.manage__unlock
        h5 Enter password to manage match
        input(type = "text", id = "passwordmanage" class='inputfield4' placeholder = "Password")
        
      
      div.match__manage(id=match_manage)
        div.buttons
          h5.managebuttons Country 1 goals
          div(type = "submit", id = "country1goalplus" class='modbutton1')= "+"
          div(type = "submit", id = "country1goalminus" class='modbutton2')= "-"
        div.buttons
          h5.managebuttons Country 2 goals
          div(type = "submit", id = "country2goalplus" class='modbutton1')= "+"
          div(type = "submit", id = "country2goalminus" class='modbutton2')= "-"
        div.buttons
          h5.managebuttons Country 1 shots
          div(type = "submit", id = "country1shotsplus" class='modbutton1')= "+"
          div(type = "submit", id = "country1shotsminus" class='modbutton2')= "-"
        div.buttons
          h5.managebuttons Country 2 shots
          div(type = "submit", id = "country2shotsplus" class='modbutton1')= "+"
          div(type = "submit", id = "country2shotsminus" class='modbutton2')= "-"
        div.buttons
          h5.managebuttons Country 1 fouls
          div(type = "submit", id = "country1foulplus" class='modbutton1')= "+"
          div(type = "submit", id = "country1foulminus" class='modbutton2')= "-"
        div.buttons
          h5.managebuttons Country 2 fouls
          div(type = "submit", id = "country2foulplus" class='modbutton1')= "+"
          div(type = "submit", id = "country2foulminus" class='modbutton2')= "-"
        br
        textarea(id="commentary" class="inputfield3" cols='60' rows='8')
          each nestedObject in match.commentary
           = nestedObject.message
        div(id="updatecomm" class="updatecomm") Update
        div.databox
          input(type = "text", id = "matchid" class='inputfield' placeholder = "country1goals" value=match._id)
          br
          input(type = "text", id = "country1goals" class='inputfield2' placeholder = "country1goals" value=match.country1Goals)
          br
          input(type = "text", id = "country2goals" class='inputfield2' placeholder = "country2goals" value=match.country2Goals)
          br
          input(type = "text", id = "country1shots" class='inputfield2' placeholder = "country1shots" value=match.country1Shots)
          br
          input(type = "text", id = "country2shots" class='inputfield2' placeholder = "country2shots" value=match.country2Shots)
          br
          input(type = "text", id = "country1fouls" class='inputfield2' placeholder = "country1fouls" value=match.country1Fouls)
          br
          input(type = "text", id = "country2fouls" class='inputfield2' placeholder = "country2fouls" value=match.country2Fouls)
          
          br
        
        